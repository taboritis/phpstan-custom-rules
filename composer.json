{
    "name": "taboritis/phpstan-custom-rules",
    "description": "Bunch of rules for extending PhpStan",
    "type": "library",
    "require": {
        "php": ">=8.0 <8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^6.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Taboritis\\PhpstanCustomRules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Taboritis\\PhpstanCustomRules\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Piotr Skrobol",
            "email": "taboritis@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "all-checks": [
            "@phpstan",
            "@test"
        ]
    }
}
